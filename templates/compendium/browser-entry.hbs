<tr data-uuid="{{ entry.uuid }}">
    {{#if displaySelection}}
    <td class="selection">
        <input type="checkbox" name="selected" value="{{ entry.uuid }}" {{ checked selected }}>
    </td>
    {{/if}}
    <td class="icon">
        {{#if entry.img}}
        <img class="gold-icon" loading="lazy" src="{{ entry.img }}" alt="{{ entry.name }}">
        {{/if}}
    </td>
    <td class="name">
        <a data-action="openLink">{{ entry.name }}</a>
    </td>
    <!-- TODO: Display dynamic columns as appropriate -->
    <!-- TODO: Display source column -->
</tr>
